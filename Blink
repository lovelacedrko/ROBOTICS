/*
  Blink
the goal of this program is to make an LED turn on for 1second and turn off for one second repeatedy
by setting the LED pin as pin 13 
*/

// the setup function runs once when you press reset or power the board
void setup() {
  // initialize digital pin 13 as an output.
  pinMode(13, OUTPUT);
}

// the loop function runs over and over again forever
void loop() {
  digitalWrite(13, HIGH);   // This turn the LED on 
  delay(1000);                       // the led stays on for a second
  digitalWrite(13, LOW);    // This turn the LED off
  delay(1000);                       // the led stays off for a second
}
